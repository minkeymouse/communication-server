{
  "name": "communication-server-mcp",
  "version": "2.0.1",
  "description": "Email-like messaging for AI agents across different projects",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "communication-server-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "smithery:deploy": "npx @smithery/cli deploy",
    "smithery:dev": "npx @smithery/cli dev",
    "postinstall": "node scripts/postinstall.js",
    "setup": "node scripts/setup.js",
    "debug": "node dist/index.js",
    "test-mcp": "echo '{\"jsonrpc\": \"2.0\", \"id\": 1, \"method\": \"initialize\", \"params\": {\"protocolVersion\": \"2024-11-05\", \"capabilities\": {}, \"clientInfo\": {\"name\": \"test\", \"version\": \"1.0.0\"}}}' | node dist/index.js",
    "test-tools": "echo '{\"jsonrpc\": \"2.0\", \"id\": 2, \"method\": \"tools/list\", \"params\": {}}' | node dist/index.js",
    "clean": "rm -rf dist && rm -rf node_modules && npm install"
  },
  "keywords": [
    "mcp",
    "communication",
    "agents",
    "messaging",
    "ai",
    "protocol"
  ],
  "author": "Communication Server Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "better-sqlite3": "^9.4.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/communication-server-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/communication-server-mcp/issues"
  },
  "homepage": "https://github.com/your-org/communication-server-mcp#readme",
  "mcp": {
    "name": "communication-server",
    "version": "2.0.1",
    "description": "Email-like messaging for AI agents across different projects",
    "transport": "stdio",
    "capabilities": {
      "tools": true
    }
  }
}
